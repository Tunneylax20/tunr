<h1><%= @artist.name %></h1>
<img src="<%= @artist.photo_url %>" width="300px"/>
<p>Genre: <%= @artist.genre %></p>
<h2>Songs:</h2>
<ul>
<% @songs.each do |song| %>
  <li><%= song.title %>, 
      <%= song.year %> 
      <audio controls>
        <source src="<%= song.preview_url %>">
      </audio>
      <br/>
      <a href="/artists/<%= @artist.id %>/songs/<%= song.id %>/edit">Edit</a>
      
       <%= form_tag artist_song_path(@artist, song), method: "delete" do %>
        <%= submit_tag("Delete") %>
      <% end %>
  </li>
<% end %>
</ul>

<br/>
<a href="/artists/<%= @artist.id %>/songs/new">Add Song</a>

<br/>
<a href="/artists">Artists Home</a>